<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <WebView
            android:id="@+id/webcamView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

        </WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/steerBar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:max="256"
                android:progress="128" />

            <TextView
                android:id="@+id/steerBarValueDisplay"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/throttleBar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:max="256"
                android:progress="0" />

            <TextView
                android:id="@+id/throttleBarValueDisplay"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button10"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:onClick="press_left"
                android:text="@string/button_left" />

            <Button
                android:id="@+id/button9"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:onClick="press_down"
                android:text="@string/button_down" />

            <Button
                android:id="@+id/button8"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:onClick="press_right"
                android:text="@string/button_right" />

            <Button
                android:id="@+id/button5"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:onClick="press_up"
                android:text="@string/button_up" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>